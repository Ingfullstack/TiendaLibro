@model IEnumerable<Categoria>
@{
    ViewData["Title"] = "Lista de Categoriaa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xl">
    <h1 class="text-center mt-4 fw-bold">Lista de Categorias</h1>
    <div class="d-flex justify-content-md-end my-3 justify-content-center">
        <a asp-area="Admin" asp-controller="Categorias" asp-action="Agregar" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Nueva Categoria</a>
    </div>
    <div class="row">
        <div class="col-12 p-0">
            <div class="table-responsive">
                <table id="tblDatos" class="table table-striped border w-100 shadow">
                    <thead class="table-dark">
                        <tr>
                            <th>Categoria</th>
                            <th>Descripcion</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/categoria.js"></script>
}

