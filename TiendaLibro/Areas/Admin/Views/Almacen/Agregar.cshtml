@model Almacen
@{
    ViewData["Title"] = "Crear Almacen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xl">
    <div class="row justify-content-center mt-5">
        <div class="col-12 col-md-8">
            <div class="card">
                <div class="card-header bg-dark py-5 bg-gradient">
                    <h2 class="text-center text-white fw-bold">Nuevo Almacen</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="row p-2">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Nombre" class="text-uppercase fw-bold text-muted"></label>
                                    <input type="text" asp-for="Nombre" class="form-control" placeholder="Nombre del almacen" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Descripcion" class="text-uppercase fw-bold text-muted"></label>
                                    <input type="text" asp-for="Descripcion" class="form-control" placeholder="Descripcion del almacen" />
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Estado" class="text-uppercase fw-bold text-muted"></label>
                                    <select asp-for="Estado" class="form-select">
                                        <option disabled selected>--Seleccione--</option>
                                        <option value="true">Activo</option>
                                        <option value="false">Inactivo</option>
                                    </select>
                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 col-sm-4">
                                    <button class="btn btn-primary w-100">
                                        <i class="bi bi-plus-circle"></i> Guardar
                                    </button>
                                </div>
                                <div class="col-6 col-sm-4">
                                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                                        <i class="bi bi-arrow-return-left"></i> Regresar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}

